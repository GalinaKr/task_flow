<%= render '/navigation/nav_bar' %>

<div id="project-index">
  <% if msg = flash[:error] %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
        &times;
      </button>
      <strong><%= msg %></strong>
    </div>
  <% end %>


  <div class="container">

    <% @projects.each do |project| %>
      <div class="card">
        <div class="card-body">
          <div class="card-title">
            <%= link_to project.project_name, project %>
          </div>
          <div class="card-footer">
            <%= link_to "Update", project_path(project.id), class: "btn btn-primary" %>
            <%= link_to "Delete",
                        project_path(project.id),
                        method: :delete,
                        class: "btn btn-danger",
                        data: { confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="card">
    <%= form_with model: @project do |f| %>
      <%= f.text_field :project_name, class: "form-control" %>
      <%= f.submit 'Add New Project', class: "btn btn-primary" %>
    <% end %>
  </div>

</div>
